#!/usr/bin/env bash

prefix="http://dbpedia.org/resource"

graph="$1"
entity="${prefix}/$2"
label="http://www.w3.org/2000/01/rdf-schema#label"
name="http://xmlns.com/foaf/0.1/name"

tmpfile1=$(mktemp)
tmpfile2=$(mktemp)

hdtSearch -q "$entity $label ?" $graph -o $tmpfile1 1>/dev/null 2>&1
hdtSearch -q "$entity $name ?" $graph -o $tmpfile2 1>/dev/null 2>&1
cat $tmpfile1 $tmpfile2 \
  | cut --complement -d ' ' -f1 \
  | awk -F ' ' -v label="$label" -v name="$name" -v entity=$entity '
BEGIN{
  m_label = ""
  m_name = ""
}
{
  if ($1 == label || $1 == name ) {
    split($0, a, $1)
    gsub(/^[ \t]+/,"", a[2])
    split(a[2], b, "@en")
    c = substr( b[1], 2, length(b[1])-2)
    d = gsub( "\"", "\\\"", c)
    if ( $1 == label) {
      if ( m_label != "") {
        m_label = m_label "," c
      }
      else {
        m_label = c
      }
    }
    else {
      if ( m_name != "") {
        m_name = m_name "," c
      } else {
        m_name = c
      }
    }
  }
}
END{
  print entity"|"m_label"|"m_name
}
'
